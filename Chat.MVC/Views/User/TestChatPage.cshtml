@{
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Chat</h3>
                </div>
                <div class="card-body">
                    <div class="chat-messages">
                        
                            <div class="message">
                                <div class="message-sender">@User.FindFirst(ClaimTypes.Name).Value</div>
                                <div class="message-content">2</div>
                            </div>
                        
                    </div>
                </div>
                <div class="card-footer">
                    <form class="message-form" method="post" action="@Url.Action("SendMessage", "Chat")">
                        <div class="input-group">
                            <input type="text" class="form-control" name="message" placeholder="Type your message" required>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>